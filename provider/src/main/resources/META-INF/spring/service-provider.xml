<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:sofa="http://sofastack.io/schema/sofaboot"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://sofastack.io/schema/sofaboot http://sofastack.io/schema/sofaboot.xsd">

    <bean id="sampleJvmService" class="cc.databus.service.impl.SampleJvmServiceImpl">
        <property name="message" value="Hello, jvm service xml implementation." />
    </bean>

    <bean id="sampleJvmServiceAnnotation" class="cc.databus.service.impl.SampleJvmServiceAnnotationImpl" />

    <bean id="publishServiceWithClient" class="cc.databus.service.PublisServiceWithClient" />

    <sofa:service ref="sampleJvmService" interface="com.alipay.sofa.isle.sample.SampleJvmService">
        <sofa:binding.jvm/>
    </sofa:service>
</beans>